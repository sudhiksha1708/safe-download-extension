{
  "manifest_version": 3,
  "name": "Safe Download Checker",
  "version": "1.0",
  "description": "Verify and block malicious downloads and websites.",
  "permissions": [
    "downloads",
    "storage",
    "notifications",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ]
}